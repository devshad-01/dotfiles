# X Session Profile - Environment variables for consistent DPI/scaling
# This file is loaded before the window manager starts

# X11 DPI setting
xrdb -merge ~/.Xresources

# GTK scaling - rely on DPI instead of scale multiplier
export GDK_SCALE=1
export GDK_DPI_SCALE=1.0

# Qt scaling - use DPI 120 for 125% scaling at 2560x1440
export QT_AUTO_SCREEN_SCALE_FACTOR=0
export QT_FONT_DPI=120
